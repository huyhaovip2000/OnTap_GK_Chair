<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvGia_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tvName_03"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvName_03"
        app:layout_constraintTop_toBottomOf="@+id/tvName_03" />

    <ImageView
        android:id="@+id/imageView_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/images4" />

    <TextView
        android:id="@+id/tvName_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_03"
        app:layout_constraintStart_toEndOf="@+id/imageView_03"
        app:layout_constraintTop_toTopOf="@+id/imageView_03"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButton_Minus_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/tvGia_03"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvGia_03"
        app:layout_constraintTop_toBottomOf="@+id/tvGia_03"
        app:srcCompat="@drawable/anh1" />

    <ImageButton
        android:id="@+id/imageButton_Add_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSoLuong_03"
        app:layout_constraintStart_toEndOf="@+id/tvSoLuong_03"
        app:layout_constraintTop_toTopOf="@+id/tvSoLuong_03"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/anh2" />

    <TextView
        android:id="@+id/tvSoLuong_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton_Minus_03"
        app:layout_constraintStart_toEndOf="@+id/imageButton_Minus_03"
        app:layout_constraintTop_toTopOf="@+id/imageButton_Minus_03"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>